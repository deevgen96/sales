<div role="tabpanel" class="tab-pane active" id="custom_items">
    <button class="btn btn-default pull-right" type="button" data-toggle="modal"
            data-target="#editCustomItem" @click="setCustomItemDefault"><i class="fa fa-plus"
                                                                           aria-hidden="true"></i>&nbsp;Добавить
        позицию
    </button>
    <table class="table">
        <thead>
        <td>#</td>
        <td>Клиент</td>
        <td>Название товара</td>
        <td>Артикул</td>
        <td>Ссылка</td>
        <td>Размер</td>
        <td>Количество</td>
        <td>На кого</td>
        <td>Начальная цена</td>
        <td>Конечная цена</td>
        <td>Стоимость</td>
        <td>Фото</td>
        <td>Отказ</td>
        <td>Не подошло</td>
        <td></td>
        <td></td>
        </thead>
        <tbody>
        <tr v-for="(itm, index) in custom_items | orderBy 'article'"
            v-if="((client.client_id) && itm.client_id == client.client_id) || (!client.client_id)">
            <td>${itm.log_id}</td>
            <td>${itm.client_name}</td>
            <td>${itm.item_name}</td>
            <td>${itm.article}</td>
            <td><a :href="itm.item_link" target="_blank">${itm.item_link}</a></td>
            <td>${itm.item_size}</td>
            <td>${itm.item_count}</td>
            <td>${itm.sex}</td>
            <td>${itm.source_price}</td>
            <td>${itm.sale_price}</td>
            <td>${itm.total}</td>
            <td>
                <div class="thumbnail" v-if="itm.item_photo">
                    <image :src="getImageUrl(itm.item_photo)"/>
                </div>
            </td>
            <td><input type="checkbox" :checked="itm.decline_before_send == 1" :value="itm.decline_before_send" disabled></td>
            <td><input type="checkbox" :checked="itm.decline_after_sale == 1" :value="itm.decline_after_sale" disabled></td>
            <td>
                <button class="btn btn-default btn-sm" type="button" data-toggle="modal"
                        data-target="#editCustomItem" @click="setCustomItem(index)"><i
                            class="fa fa-pencil" aria-hidden="true"></i></button>
            </td>
            <td>
                <button class="btn btn-default btn-sm" type="button"
                        @click="deleteCustomItem(index)"><i
                            class="fa fa-trash" aria-hidden="true"></i></button>
            </td>
        </tr>
        </tbody>
    </table>
</div>